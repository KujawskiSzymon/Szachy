@model IEnumerable<Szachy.Models.Gracz>

@if (Model.Count() == 0)
{
    <p>Brak graczy...</p>
}
else
{

    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                Nazwisko
            </th>
            <th>
                Imie
            </th>
            <th>
                Ranking
            </th>
            <th>
                Opcje
            </th>
            

        </tr>
       
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(n => item.Nazwisko)
                    </td>
                    <td>
                        @Html.DisplayFor(n => item.Imie)
                    </td>
                    <td>
                        @Html.DisplayFor(n => item.Ranking)
                    </td>
                    <td>
                        <partial name="_TablePartialPlayerDelete" model="item.Id" />
                    </td>
                </tr>


            }
        </table>
}





