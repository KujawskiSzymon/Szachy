@model Szachy.Models.Mecz

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Stwórz</h2>
<form method="post" asp-action="CreateMecz">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Id_Bialy" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Id_Bialy" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Id_Bialy" class="text-danger"></span>
            <div class="col-3">
                <label asp-for="Id_Czarny" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Id_Czarny" class="form-control" />
            </div>    <br />
            <span asp-validation-for="Id_Czarny" class="text-danger"></span>
            <div class="col-3">
                <label asp-for="Wynik" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Wynik" class="form-control" />
            </div>    <br />
            <span asp-validation-for="Wynik" class="text-danger"></span>

        </div>
        <div class="row form-group">
            <div class="col-5 offset-2">
                <br />
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Stwórz" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Mecz" class="btn btn-success form-control">Powrót</a>
                    </div>
                </div>
            </div>
        </div>

    </div>


</form>
